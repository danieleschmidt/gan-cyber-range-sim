# Test Environment Configuration
# This file contains configuration for running tests

# Environment identification
ENVIRONMENT=test
TESTING=true

# Logging configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=detailed

# Database configuration (use in-memory for tests)
DATABASE_URL=sqlite:///:memory:
TEST_DATABASE_URL=sqlite:///:memory:
DATABASE_POOL_SIZE=1
DATABASE_MAX_OVERFLOW=0

# Redis configuration (use test database)
REDIS_URL=redis://localhost:6379/15
TEST_REDIS_URL=redis://localhost:6379/15

# AI/LLM configuration (use mocks in tests)
OPENAI_API_KEY=test-key-not-real
ANTHROPIC_API_KEY=test-key-not-real
USE_MOCK_LLM=true
LLM_TIMEOUT=30

# Kubernetes configuration (use mock)
KUBERNETES_NAMESPACE=test-cyber-range
USE_MOCK_KUBERNETES=true
KUBECONFIG=/dev/null

# Security settings for testing
SECURITY_TESTING_ENABLED=true
NETWORK_ISOLATION_ENABLED=true
STRICT_SECURITY_VALIDATION=true

# Performance testing
PERFORMANCE_TESTING_ENABLED=true
MAX_TEST_DURATION=300
TEST_TIMEOUT=60

# Disable external services in tests
DISABLE_EXTERNAL_APIS=true
DISABLE_MONITORING=true
DISABLE_NOTIFICATIONS=true

# Test data configuration
USE_TEST_FIXTURES=true
GENERATE_SAMPLE_DATA=true
CLEANUP_TEST_DATA=true

# Coverage and reporting
COVERAGE_ENABLED=true
COVERAGE_THRESHOLD=80
GENERATE_TEST_REPORTS=true

# Feature flags for testing
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_DEBUG_MODE=true
ENABLE_VERBOSE_LOGGING=true